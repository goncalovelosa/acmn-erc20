{
  "extends": ["solhint:recommended"],
  "plugins": [],
  "rules": {
    "compiler-version": ["error", "^0.8.20"],
    "func-visibility": ["error", { "ignoreConstructors": true }],
    "private-vars-leading-underscore": "off",
    "max-line-length": ["warn", 140],
    "no-empty-blocks": "off",
    "reason-string": ["warn", { "maxLength": 64 }]
  }
}
